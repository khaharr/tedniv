{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<style>
    .catalogue-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .article {
        display: flex;
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .article img {
        max-width: 150px;
        border-radius: 8px;
        margin-right: 20px;
    }

    .article-details {
        flex: 1;
    }

    .article-details h2 {
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    .article-details p {
        margin: 0;
        color: #555;
    }

    .article-details .price {
        font-size: 1.2em;
        color: #e63946;
        font-weight: bold;
        margin-top: 10px;
    }
</style>

<div class="catalogue-container">
    <h1>Catalogue des articles</h1>
    {% for article in catalogue %}
        <div class="article">
            <img src="/images/{{ article.image }}" alt="{{ article.nom }}">
            <div class="article-details">
                <h2>{{ article.nom }}</h2>
                <p>{{ article.description }}</p>
                <p class="price">Prix HT: {{ article.prix }} €</p>
                <p class="price">Prix TTC: {{ article.prixTTC }} €</p>
            </div>
        </div>
    {% else %}
        <p>Aucun article dans le catalogue pour le moment.</p>
    {% endfor %}
</div>
{% endblock %}
