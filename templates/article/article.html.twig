{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
<div class="container mx-auto py-12 px-4 font-sans">
    <div class="flex flex-wrap lg:flex-nowrap justify-between">
        <!-- Section des images -->
        <div class="w-full lg:w-2/3 mb-8 lg:mb-0">
            <div class="bg-gray-100 border border-gray-300 flex justify-center items-center h-96">
                <img src="{{ article.img is not empty ? article.img[0] : 'https://via.placeholder.com/400' }}" alt="{{ article.title }}" class="max-w-full max-h-full">
            </div>
        </div>

        <!-- Section des détails de l'article -->
        <div class="w-full lg:w-1/3 lg:pl-8 flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>
                <p class="text-gray-700 mb-6">{{ article.description }}</p>
                <p class="text-2xl font-semibold text-indigo-600 mb-8">{{ article.price }} €</p>
            </div>

            <!-- Section des boutons d'action -->
            <div class="space-y-4">
                <button class="w-full py-3 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 transition duration-300">Acheter</button>
                <button class="w-full py-3 bg-gray-200 text-gray-800 rounded-full hover:bg-gray-300 transition duration-300">Faire une offre</button>
                <button class="w-full py-3 bg-yellow-400 text-white rounded-full hover:bg-yellow-500 transition duration-300">Mettre en Favori</button>
                <button class="w-full py-3 bg-blue-400 text-white rounded-full hover:bg-blue-500 transition duration-300"
                onclick="window.location.href='{{ path('message', {'article' : article.id, 'recipient': user.id}) }}'"
                >Contacter le vendeur</button>
                <button onclick="window.location.href='{{ path('app_articles') }}'" class="w-full py-3 bg-gray-800 text-white rounded-full hover:bg-gray-900 transition duration-300">Retour à la liste</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}